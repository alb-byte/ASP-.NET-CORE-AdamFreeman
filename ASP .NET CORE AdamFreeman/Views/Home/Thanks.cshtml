@model ASP_.NET_CORE_AdamFreeman.Models.GuestResponse
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width = device-width" />
    <title>Thanks</title>
</head>
<body>
    <p>
        <hl>Thank you, @Model.Name!</hl>
        @if (Model.WillAttend == true)
        {
            @:lt's great that you're coming. The drinks are already in the fridge!
        }
        else
        {
            @:Sorry to hear that you can't make it, but thanks for letting us know.
        }
    </p>
    <p>Click <a asp-action="ListResponses">here</a> to see who is coming.</p>
</body>
</html>